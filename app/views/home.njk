{% extends '_layout.njk' %}

{% block content %}

<div class="columns">
  <div class="column">
    <h3 class="title is-4">Queues</h3>
    <table class="table table is-narrow table is-hoverable">
      <thead>
        <tr>
          <th>Name</th>
          <th>Active</th>
          <th>Dead Letter</th>
        </tr>
      </thead>
      <tbody>
      {% for queue in queues %}
        <tr>
          <td>{{ queue.name }}</td>
          <td>{{ queue.activeMessageCount }}</td>
          <td>{{ queue.deadLetterMessageCount }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
  <div class="column">
    <h3 class="title is-4">Topics</h3>
    {% for topic in topics %}
    {% endfor %}
  </div>
</div>

{% endblock %}
